@page
@model CityBreaks.Pages.Countries.CreateModel
@{
    ViewData["Title"] = "Create Country";
}

<h4>Create Country</h4>

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <table class="table table-borderless">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>ISO-3166-1 Code</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < 5; i++)
                    {
                        <tr>
                            <td class="w-75">
                                <input class="form-control" type="text" name="Inputs[@i].CountryName" value="" />
                            </td>
                            <td class="w-25">
                                <input class="form-control" type="text" name="Inputs[@i].CountryCode" value="" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>
@if (Model.Countries is not null && Model.Countries.Any())
{
    <p>
        You submitted the following
    </p>
    <ul>
        @foreach (var country in Model.Countries)
        {
            <li>
                <img src="~/images/flags/@(country.CountryCode).png" alt="Country flag" />
                @country.CountryName
            </li>
        }
    </ul>
}