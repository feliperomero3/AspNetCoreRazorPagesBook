@page
@model CityBreaks.Pages.Cities.CreateModel
@{
    ViewData["Title"] = "Create City";
}

<div class="col-4">
    <form method="post">
        <div class="mb-3">
            <label for="cityName">Enter City name</label>
            <input class="form-control" type="text" name="cityName" id="cityName" />
        </div>
        <div class="mb-3">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </form>
    <div>
        <p>@Model.Message</p>
    </div>
</div>
