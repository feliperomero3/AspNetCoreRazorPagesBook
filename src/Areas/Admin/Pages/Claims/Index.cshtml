@page
@using System.Security.Claims
@model CityBreaks.Areas.Admin.Pages.Claims.IndexModel
@{
    ViewData["Title"] = "Claims ― Admin";
}

<h1>Claims</h1>

<div class="row">
    <div class="col-md-6">
        @foreach (var user in Model.Users)
        {
            var claims = await Model.GetClaimsAsync(user);
            if (claims.Any())
            {
                <h5>@user.UserName</h5>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Type</th>
                            <th>Value</th>
                            <th>Issuer</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in claims)
                        {
                            <tr>
                                <td>@claim.Type</td>
                                <td>@claim.Value</td>
                                <td>@claim.Issuer</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        }
    </div>
</div>
